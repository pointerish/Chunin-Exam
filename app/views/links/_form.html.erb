<%= turbo_frame_tag :link do %>
  <%= form_with model: link do |f| %>
  <div class="flex flex-col justify-center items-center bg-grey-400 mt-12">
      <%= f.label :url, "Enter the Link:", class: "text-sm md:text-xl mb-2 mt-4" %>
      <%= f.url_field :url, autofocus: true, autocomplete: "url", class: 'rounded border py-2 px-3 text-black-400' %>
      <%= f.submit "Shorten!", class: "bg-green-500 rounded mt-4 p-2 md:p-2 text-white hover:text-black hover:bg-green-200" %>
  </div>
  <% end %>
  <div class="flex flex-col justify-center items-center">
      <% flash.each do |type, msg| %>
      <div class="bg-green-100 border-4 border-green-500 text-green-700 mt-10 flex align-items" role="alert">
          <div class="flex justify-center align-items pt-4 pl-2">
            <p><%= msg %></p>
          </div>
          <div class="copy-clipboard p-4">
            <%= image_tag asset_path("copy.svg"), size: "30x30" %>
          </div>
      </div>
      <% end %>
  </div>
<% end %>