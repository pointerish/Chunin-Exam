<%= form_with model: link do |f| %>
<%= @short_url %>
<div class="flex flex-col justify-center items-center">
    <%= f.label :url, class: "text-sm md:text-xl mb-2 mt-4" %>
    <%= f.url_field :url, autofocus: true, autocomplete: "url", class: 'rounded' %>
    <%= f.submit "Shorten!", class: "bg-green rounded mt-4 p-2 md:p-2 text-white hover:text-black" %>
</div>
<% end %>