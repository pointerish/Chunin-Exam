<%= turbo_frame_tag :link do %>
  <%= form_with model: link do |f| %>
  <div class="flex flex-col justify-center items-center bg-grey-400 mt-12">
      <%= f.label :url, "Enter the Link:", class: "text-sm md:text-xl mb-2 mt-4" %>
      <%= f.url_field :url, autofocus: true, autocomplete: "url", required: true, size: "60x30", class: 'rounded border py-2 px-3 text-black-400' %>
      <small>Provide the full URL along with its protocol</small>
      <%= f.submit "Shorten!", class: "bg-green-500 border-green-700 rounded mt-4 p-2 md:p-2 text-white hover:text-black hover:bg-green-200" %>
  </div>
  <% end %>
  <div class="flex flex-col justify-center items-center">
      <% flash.each do |type, msg| %>
      <div class="bg-green-100 border-4 border-green-500 text-green-700 mt-10 flex align-items" data-controller="links" role="alert">
          <div class="flex justify-center align-items pt-4 pl-2">
            <p id="flash-url"><%= msg %></p>
          </div>
          <div class="copy-clipboard p-4" data-action="click->links#copy">
            <%= image_tag asset_path("copy.svg"), size: "30x30" %>
          </div>
      </div>
      <% end %>
  </div>
<% end %>